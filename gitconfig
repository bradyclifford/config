[alias]
    unstage = reset HEAD
    co = checkout
    ci = commit -m
    s = status
    com = checkout master
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lga = log --graph --pretty=oneline --abbrev-commit --decorate --all
